[
  {
    "context": "vim_mode == normal && Editor && !menu",
    "bindings": {
      "space s f": "file_finder::Toggle",
      "space p r": "pane::SplitRight",
      "space p d": "pane::SplitDown",
      "space p u": "pane::SplitUp",
      "space p l": "pane::SplitLeft",
      "ctrl-l": ["workspace::ActivatePaneInDirection", "Right"],
      "ctrl-h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-k": ["workspace::ActivatePaneInDirection", "Down"],
      "ctrl-j": ["workspace::ActivatePaneInDirection", "Up"],
      "cmd-d": "editor::DuplicateLineDown",
      "cmd-backspace": "editor::DeleteLine"
    }
  },
  {
    "context": "Workspace && vim_mode !== insert",
    "bindings": {
      "space s g": "workspace::NewSearch",
      "cmd-t": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "ctrl-l": ["workspace::ActivatePaneInDirection", "Right"]
    }
  }
]
